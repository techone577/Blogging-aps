<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blogging.aps.persistence.TagEntityMapper" >
  <resultMap id="BaseResultMap" type="com.blogging.aps.model.entity.post.TagEntity" >
    <result column="id" property="id" />
    <result column="tag_name" property="tagName"/>
    <result column="del_flag" property="delFlag" />
    <result column="add_time" property="addTime"/>
    <result column="update_time" property="updateTime"  />
  </resultMap>
  <sql id="Base_Column_List">
    id, tag_name, del_flag, add_time, update_time
  </sql>
  <insert id="insert" parameterType="com.blogging.aps.model.entity.post.TagEntity" >
    insert into tag (id, tag_name, del_flag, 
      add_time, update_time)
    values (#{id}, #{tagName,}, #{delFlag}, 
      #{addTime}, #{updateTime})
  </insert>
  <insert id="insertSelective" parameterType="com.blogging.aps.model.entity.post.TagEntity" useGeneratedKeys="true" keyProperty="id">
    insert into tag
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="tagName != null" >
        tag_name,
      </if>
      <if test="delFlag != null" >
        del_flag,
      </if>
      <if test="addTime != null" >
        add_time,
      </if>
      <if test="updateTime != null" >
        update_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id},
      </if>
      <if test="tagName != null" >
        #{tagName,},
      </if>
      <if test="delFlag != null" >
        #{delFlag},
      </if>
      <if test="addTime != null" >
        #{addTime},
      </if>
      <if test="updateTime != null" >
        #{updateTime},
      </if>
    </trim>
  </insert>

  <select id="selectTagByName" resultMap="BaseResultMap" parameterType="java.lang.String">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tag
    WHERE
    del_flag = 0
    AND
    tag_name = #{tagName}
  </select>

  <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tag
    WHERE
    del_flag = 0
    AND
    id = #{tagId}
  </select>

  <delete id="deleteById">
    DELETE from tag
    where id = #{tagId}
  </delete>

  <select id="selectTagByIdList" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tag
    WHERE
    del_flag = 0
    <if test="idList != null">
      AND
      id in
      <foreach collection="idList" item="item" open="(" close=")"
               separator=",">
        #{item}
      </foreach>
    </if>
    ORDER BY id
  </select>

  <select id="selectTagList" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tag
    WHERE
    del_flag = 0
  </select>

  <update id="updateByIdSelective" parameterType="com.blogging.aps.model.entity.post.TagEntity" >
    update tag
    <set >
      <if test="tagName != null" >
        tag_name = #{tagName},
      </if>
      <if test="delFlag != null" >
        del_flag = #{delFlag},
      </if>
      <if test="addTime != null" >
        add_time = #{addTime},
      </if>
      <if test="updateTime != null" >
        update_time = #{updateTime},
      </if>
    </set>
    where id = #{id}
  </update>
</mapper>